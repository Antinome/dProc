<%= form_for([@task, @task.pages.build ], :html => { :multipart => true }) do |f| %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>  
  <div class="field">
  	<%= f.file_field :page_image %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
